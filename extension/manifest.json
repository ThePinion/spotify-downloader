{
    "manifest_version": 2,
    "name": "Spotify Track Info",
    "version": "1.1",
    "permissions": ["activeTab", "http://localhost/*"],
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["https://open.spotify.com/*"],
            "js": ["content.js"]
        }
    ]
}
